<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.MainActivity">

    <LinearLayout
        android:id="@+id/splashScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:src="@drawable/snow_studio"
            android:scaleType="fitCenter"
            android:alpha="0.7"
            android:contentDescription="snow studio"/>
    </LinearLayout>


    <TextView
        android:id="@+id/mainMenuTitle"
        android:layout_width="481dp"
        android:layout_height="59dp"
        android:fontFamily="@font/kablammo_regular"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="@string/mainActivityTitle"
        android:textAlignment="center"
        android:textColor="#E0E0E0"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/mainMenuContents"
        app:layout_constraintEnd_toEndOf="@+id/mainMenuContents"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/mainMenuContents"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <RelativeLayout
        android:id="@+id/mainMenuContents"
        android:layout_width="268dp"
        android:layout_height="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="283dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/startGameButton"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:backgroundTint="#002E5D"
                android:elevation="10dp"
                android:fontFamily="@font/bangers_regular"
                android:gravity="center"
                android:padding="10dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="@string/startGame"
                android:textColor="#00FFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gameSettingsButton"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:backgroundTint="#002E5D"
                android:elevation="10dp"
                android:fontFamily="@font/bangers_regular"
                android:gravity="center"
                android:padding="10dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="@string/settings"
                android:textColor="#00FFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/quitGameButton"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:backgroundTint="#002E5D"
                android:elevation="10dp"
                android:fontFamily="@font/bangers_regular"
                android:gravity="center"
                android:padding="10dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="@string/quitGame"
                android:textColor="#00FFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>