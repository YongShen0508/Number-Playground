<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.PracticalAssignment"
        tools:targetApi="31" >
        <activity
            android:name=".gui.GameDashboard"
            android:exported="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".gui.MainActivity"
            android:exported="true"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.NumberLadder"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".gui.NumberBuilder"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".gui.GameSettings"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".gui.NumberClash"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".gui.GameDifficultySelection"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".gui.GameSelection"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".gui.MathsMaster"
            android:exported="false"
            android:screenOrientation="landscape" />

        <service android:name=".util.MusicServices" />
    </application>

</manifest>